%h1
  = @exercise.name

.exercise-instruction
  %p
    = @exercise.instruction

#guest-solution
  = form_for @form_path do |f|
    = f.label :solution_code
    = f.text_area :solution_code
    = f.submit "execute"

- if @expected_results
  %h4
    Expected Results:
  = @expected_results

  %h4
    Your Query Returned:
  = @actual_results
  - if @correct_query == true
    %p Success!

- if @security_errors
  - @security_errors.each do |sec_error|
    %p
      = sec_error


%p
  Answers and Discussion
  %button{onclick: "toggleSolution()", id: "toggle-button"}
    show

#answers-and-discussion
  %p
    = @exercise.solution

= javascript_include_tag('exercise_show.js')
