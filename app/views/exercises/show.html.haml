%h1
  = @exercise.name

.exercise-instruction
  %p
    = @exercise.instruction

#guest-solution
  = form_tag "submit" do
    = label_tag :solution
    = text_area_tag :solution
    = submit_tag "execute"


%p
  Answers and Discussion
  %button{onclick: "toggleSolution()", id: "toggle-button"}
    show


#answers-and-discussion
  %p
    = @exercise.solution

= javascript_include_tag('exercise_show.js')
